<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadEduImgActivity">

    <Button
        android:id="@+id/btn_addImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="add image"
        />
    <Button
        android:id="@+id/btn_deleteImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="#E63249"
        android:text="delete imgage"
        />
    <ImageView
        android:id="@+id/imgView_screenImg"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/btn_createPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:padding="10dp"
            android:text="Create a Post" />

        <Button
            android:id="@+id/btn_returnList"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/white_right_arrow"
            android:padding="10dp"

            />

    </LinearLayout>


</LinearLayout>